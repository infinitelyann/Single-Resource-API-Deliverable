{% block content %}
<div class="card mb-4 shadow">
    <div class="card-body" style="background-color:#395B64;">
        <p>{{ comment.note }}
        </p>
        <div class="d-flex justify-content-between">
            <small>author:
                {{ comment.author.username }}
            </small>
            {% if comment.author == userId %}
            <form action="/comments/delete/{{car.id}}/{{comment.id}}?_method=DELETE" method="POST">
                <input class="btn " type="submit" value="X">
            </form>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}